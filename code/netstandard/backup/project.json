{
    "version": "2.1.2.0",
    "name": "SerialPortStream",
    "title": "SerialPortStream",
    "description": "An independent implementation of System.IO.Ports.SerialPort and SerialStream for better reliability and maintainability.",

    "buildOptions": {
        "allowUnsafe": true,
        "xmlDoc": true,
        "define": [
            "NETSTANDARD15"
        ],
        "compile": [
            "../*.cs",
            "../DataStructures/*.cs",
            "../Native/*.cs",
            "../Native/Unix/*.cs",
            "../Native/Windows/*.cs"
        ],
        "outputName": "RJCP.SerialPortStream"
    },

    "dependencies": {
        "System.Threading.Overlapped": "4.0.0.0",
        "System.Threading.Thread": "4.0.0.0",
        "System.Collections": "4.0.0.0",
        "System.Collections.Specialized": "4.0.0.0",
        "System.Diagnostics.Debug": "4.0.0.0",
        "System.Diagnostics.FileVersionInfo": "4.0.0.0",
        "System.Diagnostics.Tools": "4.0.0.0",
        "System.Diagnostics.TraceSource": "4.0.0.0",
        "System.IO": "4.0.0.0",
        "System.IO.FileSystem": "4.0.0.0",
        "System.Runtime.Extensions": "4.0.0.0",
        "System.Runtime.InteropServices": "4.0.0.0",
        "System.Runtime.InteropServices.RuntimeInformation": "4.0.0.0",
        "System.Text.Encoding": "4.0.0.0",
        "System.Runtime.Handles": "4.0.0.0",
        "System.Threading": "4.0.0.0",
        "System.Threading.ThreadPool": "4.0.0.0",
        "Microsoft.Win32.Registry": "4.0.0.0"
    },

    "frameworks": {
        "netstandard1.5": {
			"imports": ["portable-net46"]
		}
    }
}
